<h1>Show Car</h1>

<%= if @live_action in [:edit] do %>
  <%= live_modal @socket, ElxproK8sWeb.CarLive.FormComponent,
    id: @car.id,
    title: @page_title,
    action: @live_action,
    car: @car,
    return_to: Routes.car_show_path(@socket, :show, @car) %>
<% end %>

<ul>

  <li>
    <strong>Brand:</strong>
    <%= @car.brand %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @car.description %>
  </li>

  <li>
    <strong>License plate:</strong>
    <%= @car.license_plate %>
  </li>

</ul>

<span><%= live_patch "Edit", to: Routes.car_show_path(@socket, :edit, @car), class: "button" %></span>
<span><%= live_redirect "Back", to: Routes.car_index_path(@socket, :index) %></span>
